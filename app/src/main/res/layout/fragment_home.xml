<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-8dp"
            android:background="@color/home_page_slider"
            android:gravity="top">

            <RelativeLayout
                android:id="@+id/originalToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_openDrawer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/nav"
                    android:visibility="visible"/>

                <ToggleButton
                    android:id="@+id/toggle"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_slider"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="5dp"
        android:background="@drawable/slider_background"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_below="@+id/appBarLayout">

       <LinearLayout
            android:id="@+id/sliderlayout"
            android:background="@color/colorGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/cv_slider"
        android:padding="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_notification"
        android:textColor="@color/hometext"
        android:background="@color/white"
        android:textSize="15dp"
        android:id="@+id/title1"
        android:textStyle="bold"
        />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_job_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title1"
            android:layout_above="@+id/title2">

        </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_doctor_home"
        android:textColor="@color/hometext"
        android:background="@color/white"
        android:textSize="15dp"
        android:id="@+id/title2"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/title3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_page_details"
        android:textColor="@color/colorPrimary"
        android:background="@color/white"
        android:textSize="13dp"
        android:id="@+id/title3"
        android:layout_marginTop="@dimen/padding_10"
        android:drawableLeft="@drawable/ic_alarm_add_black_24dp"
        android:drawableTint="@color/colorPrimary"
        android:drawablePadding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
     />

    </RelativeLayout>
</RelativeLayout>

</layout>