<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/layout1"
        android:visibility="visible"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/rl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/back_about"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/ic_arrow_back"
                        android:backgroundTint="@color/colorBlack" />


                    <TextView
                        android:layout_toRightOf="@id/back_about"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="120dp"
                        android:text="About us"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="@dimen/toolbar_text" />


                </RelativeLayout>

                <!--region tab-->
                <!--  <include layout="@layout/custom_tab_layout"/>-->

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@drawable/booking"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbar"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appointmentbooking"
            android:textColor="@color/hometext"
            android:background="@color/white"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/title1"
            android:layout_below="@+id/img2"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appointment_date"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/title2"
            android:layout_below="@+id/title1"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/padding_20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appointment_slot"
            android:textColor="@color/colorPrimary"
            android:background="@color/white"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/title3"
            android:layout_below="@+id/title2"
            android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_centerVertical="true"
       >
       <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
           android:layout_marginLeft="40dp"
           android:layout_marginRight="40dp"
           android:paddingStart="25dp"
           android:padding="15dp"

           />

        <EditText
            android:id="@+id/et_mobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="15dp"
            android:textSize="16sp"
            android:hint="Contact Number"
            android:layout_below="@+id/et_email"
            android:inputType="number"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingStart="25dp"
            android:padding="15dp"
            android:maxLength="10"

            />


</RelativeLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Reserve Appointment"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="50dp"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/layout2"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cv_background"
                android:id="@+id/rl1"
                >

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/ll_toolbar2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:paddingTop="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/back_about2"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:background="@drawable/ic_arrow_back"
                                android:backgroundTint="@color/white" />




                        </RelativeLayout>

                        <!--region tab-->
                        <!--  <include layout="@layout/custom_tab_layout"/>-->

                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/congratulations"
                    android:textColor="@color/white"
                    android:textSize="@dimen/padding_20"
                    android:id="@+id/tv_name"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/toolbar2"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    app:cardCornerRadius="@dimen/padding_20"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="@dimen/padding_10"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/appointmentbooking"
                            android:textColor="@color/hometext"
                            android:textSize="18dp"
                            android:id="@+id/tv_booking"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name: Abhijeet "
                            android:textColor="@color/colorPrimary"
                            android:textSize="15dp"
                            android:id="@+id/tv_patient_name"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/tv_booking"
                            android:layout_marginRight="50dp"
                            android:layout_marginLeft="50dp"
                                    />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact: +1111111111 "
                            android:textColor="@color/colorPrimary"
                            android:textSize="15dp"
                            android:id="@+id/tv_patient_contact"
                            android:layout_marginTop="1dp"
                            android:layout_below="@+id/tv_patient_name"
                            android:layout_marginRight="50dp"
                            android:layout_marginLeft="50dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date: 20-03-2020"
                            android:textColor="@color/colorPrimary"
                            android:background="@color/colorWhite"
                            android:textSize="15dp"
                            android:id="@+id/tv_date"
                            android:layout_marginTop="1dp"
                            android:layout_below="@+id/tv_patient_contact"
                            android:layout_marginRight="50dp"
                            android:layout_marginLeft="50dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Slot: 9.00 A.M. to 12.00 P.M."
                            android:textColor="@color/colorPrimary"
                            android:background="@color/colorWhite"
                            android:textSize="15dp"
                            android:id="@+id/tv_slot"
                            android:layout_marginTop="1dp"
                            android:layout_below="@+id/tv_date"
                            android:layout_marginRight="50dp"
                            android:layout_marginLeft="50dp"
                            />

                        <View
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:background="@color/appgrey"
                            android:layout_below="@+id/tv_slot"
                            android:id="@+id/view1"
                            android:layout_marginTop="20dp"
                            android:layout_margin="@dimen/padding_20"/>
                        <Button
                            android:id="@+id/btn_submit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_appointment"
                            android:text="Home"
                            android:textColor="@color/white"
                            android:textSize="7sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/view1"
                            android:layout_marginBottom="2dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            /></RelativeLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/rl1"
                android:layout_marginTop="@dimen/padding_20"
                android:id="@+id/terms"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_us_details"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/terms"
                android:layout_marginTop="5dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"

                />


        </RelativeLayout>


    </RelativeLayout>





</layout>

